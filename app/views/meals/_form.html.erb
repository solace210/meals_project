<%= form_for @meal, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :days, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :days, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :list_ingrediants, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :list_ingrediants, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :number_ingrediants, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :number_ingrediants, :class => 'text_field' %>
    </div>
  </div>

 
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                meals_path, :class => 'btn' %>
  </div>
<% end %>
